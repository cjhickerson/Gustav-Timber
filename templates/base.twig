{% include 'html-header.twig' %}

<body class="{{body_class}}">
  	{% block header %}
		{% include 'header.twig' %}
  	{% endblock %}

	{% if home %}
		{% include 'home/header-home.twig' %}
	{% else %}
	<div class="container">
		<h1 class="text-center page-header">{{title}}</h1>
	</div>
	{% endif %}
	
	<div class="container">
		<section id="content" role="main" class="content-wrapper">
			<div class="row">
				{% if settings.sidebar_position == "left" %}
				<div class="col-md-3">{% include 'sidebar/sidebar.twig' %}</div>
				{% endif %}

				{% if settings.sidebar_position == "hide" %}
				<div class="col-md-8 col-md-offset-2">
				{% else %}
				<div class="col-md-9">
				{% endif %}
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>
				{% if settings.sidebar_position == "right" %}
				<div class="col-md-3">{% include 'sidebar/sidebar.twig' %}</div>
				{% endif %}
			</div>
		</section>
		
		{% include "pagination.twig" %}
	</div>
	

	{% block footer %}
	  {% include 'footer.twig' %}
	  {{wp_footer}}
	{% endblock %}
</body>

</html>
