<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
<head>
	<meta charset="{{site.charset}}" />
	<title>
		{% if html_title %}
		{{ html_title }}
		{% else %}
		{{site.title}}
		{% endif %}
	</title>
	
	<meta name="description" content="{{site.description}}">

	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<style type="text/css">
	header nav,
	aside.widget,
	.btn,
	.page-header {
		background: {{get_theme_mod('bgcolor')}};
		color: {{get_theme_mod('textcolor')}};
	}
	{% if get_theme_mod('bgcolor') == '#ffffff' %}
	aside.widget,
	.btn {
		border: 1px solid #eee;
	}
	{% endif %}
	a,
	section#content .link a,
	aside.widget a,
	header nav a {
		color: {{get_theme_mod('linkcolor')}}
	}
	
	.pagination li a {
		color: {{get_theme_mod('linkcolor')}};
	}

	.pagination li.page-number.active span {
		background: {{get_theme_mod('linkcolor')}};
		border-color: {{get_theme_mod('linkcolor')}};
	}
	</style>
	
	{{wp_head}}
</head>