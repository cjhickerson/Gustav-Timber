{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper container-fluid">
		<article class="post-type-{{post.post_type}} single" id="post-{{post.ID}}">
			<header>
				<h1 class="article-h1">{{post.title}}</h1>

				{% include 'tease/misc/categories.twig' %}
			</header>
			<section class="article-body">
				{{ post.content }}
			</section>
		</article>
	</div>

{% endblock %}
