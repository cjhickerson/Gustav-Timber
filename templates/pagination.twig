{% if pagination.pages %}
<div class="tool-pagination row text-center">
  <ul class="pages pagination pagination-sm">
    {% if pagination.prev %}
    <li class="{{pagination.prev.class}}"><a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}"><i class="fa fa-angle-left"></i> Prev {{args.posts_per_page}}</a></li>
    {% endif %}
    {% for page in pagination.pages %}
      <li  class="{{page.class}} {% if page.current %} active {% endif %}">
        {% if page.link %}
          <a href="{{page.link}}">{{page.title}}</a>
        {% else %}
          <span>{{page.title}}</span>
        {% endif %}
      </li>
    {% endfor %}
    {% if pagination.next %}
    <li class="{{pagination.next.class}}"><a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Next {{args.posts_per_page}} <i class="fa fa-angle-right"></i></a></li>
    {% endif %}
  </ul>
</div>
{% endif %}